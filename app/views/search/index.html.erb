<% provide(:title, @current_user.name + 'の検索') %>
<%= render "users/user_top_path" %>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!--チャネル使用時に下記の1行を使う-->
    <div id="current_user_id" data-user_id="<%= @current_user.id %>"></div>
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <%= form_with(url: search_index_path, method: "GET", local: false, remote: true) do |f| %>
          <div class="input-group input-group-lg">
            <%= f.search_field :value, class: "form-control", placeholder: "Type your keywords here", value: "#{@search_value if @search_value.present?}" %>
            <div class="input-group-append">
              <%= button_tag sanitize('<i class="fa fa-search"></i>Register'), :type => "submit", :class => "btn btn-lg btn-default" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="search-container" class="search-container-<%= @current_user.id.to_s %>">
      <% render "microposts/microposts_index", microposts_index: @micropost_search, current_user: @current_user, post_comment: @post_comment %>
    </div>
  </div>
</section>
