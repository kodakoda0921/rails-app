<% if @image_flg && !@back_ground_flg %>
$('#preview_profile_img').attr('src', "<%= image_url url_for(@user.preview_image.processed)%>")
<% end %>
<% if @back_ground_flg && !@image_flg %>
$("#preview_background_img").attr("style",
    'background: url("<%= url_for(@user.preview_background_image.processed)%>");center: center;')
<% end %>
<% if @image_flg && @back_ground_flg %>
$('#preview_profile_img').attr('src', "<%= image_url url_for(@user.preview_image.processed)%>")
$("#preview_background_img").attr("style",
    'background: url("<%= url_for(@user.preview_background_image.processed)%>");center: center;')
<% end %>
