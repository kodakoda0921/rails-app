<!-- Widget: user widget style 1 -->
<div class="card card-widget widget-user shadow-lg">
  <!-- Add the bg color to the header using any of the bg-* classes -->
  <div class="widget-user-header text-gray-dark" id="preview_img" style='background: url("<%= Rails.application.routes.url_helpers.rails_representation_url(user.display_background_image.processed, only_path: true) if user.image.attached? %>");center: center;'>
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-11">
        <h3 class="widget-user-username text-right"><%= user.name %></h3>
      </div>
    </div>
    <h5 class="widget-user-desc text-right"><%= user.profiles.job %></h5>

  </div>
  <div class="widget-user-image">
    <%= image_tag user.display_image, class: "profile-user-img img-fluid img-circle" if user.image.attached? %>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-sm-4 border-right">
        <div class="description-block">
          <h5 class="description-header">3,200</h5>
          <span class="description-text small">Following</span>
        </div>
        <!-- /.description-block -->
      </div>
      <!-- /.col -->
      <div class="col-sm-4 border-right">
        <div class="description-block">
          <h5 class="description-header">13,000</h5>
          <span class="description-text small">Followers</span>
        </div>
        <!-- /.description-block -->
      </div>
      <!-- /.col -->
      <div class="col-sm-4">
        <div class="description-block">
          <h5 class="description-header">35</h5>
          <span class="description-text small">Groupe</span>
        </div>
        <!-- /.description-block -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
    <a href="#" class="btn btn-primary btn-flat btn-sm float-lg-right">Follow</a>
  </div>
</div>
<!-- /.widget-user -->