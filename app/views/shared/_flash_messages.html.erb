<div aria-live="polite" aria-atomic="true" style="position: absolute; top: 20px; right: 20px;min-height: 200px;z-index: 1040">

  <div style="position: relative">
    <% flash.each do |message_type, message| %>

      <div class="toast" role="status" aria-live="polite" aria-atomic="true">
        <div class="toast-header">
          <rect width="100%" height="100%" fill="#007aff"/>
          <i class="fa fa-square " style="<%= case message_type
                                              when "info"
                                                "color: dodgerblue"
                                              when "success"
                                                "color:limegreen"
                                              else
                                                "color:crimson"
                                              end %>">

          </i>
          <strong class="mr-auto"><%= message_type %></strong>
          <small class="text-muted">just now</small>
          <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="toast-body">
          <% if message.include?("<br") %>
            <%= message.html_safe %>
          <% else %>
            <%= message %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>






