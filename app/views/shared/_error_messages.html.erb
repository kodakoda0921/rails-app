<% if object.errors.any? %>

  <div aria-live="polite" aria-atomic="true" style="position: absolute; top: 10px; right: 10px; min-height: 500px;z-index: 1040;">
    <!-- Position it -->
    <div style="position: relative;">
      <% object.errors.full_messages.each do |msg, n = 0| %>
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="toast-header">
            <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
              <rect fill="#007aff" width="100%" height="100%"/>
            </svg>
            <strong class="mr-auto"><%= n + 1 %></strong>
            <small class="text-muted right">now</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="toast-body">
            <%= msg %>
          </div>
        </div>
      <% end %>
    </div>
<% end %>


</div>

<script>
    $(document).ready(function () {
        $('.toast').toast({delay: 5000}).toast('show');
    });
</script>

