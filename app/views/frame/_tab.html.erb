<script>

    $(document).ready(function () {
        let val = ""
        let link = '<%= search_index_path %>?value=' + val
        $('.content-wrapper').IFrame('createTab', 'Search', link, 'search', true)
    })

    function parentHomePageLink() {
        $('.content-wrapper').IFrame('createTab', 'Home', '<%= users_home_path %>', 'home', true)
    }

    function parentFollowingIndexPageLink(link, user_name) {
        $('.content-wrapper').IFrame('createTab', user_name + '„ÅÆFollow List', link, 'index', true)
    }

    function parentSearchPageLink(val) {
        let link = '<%= search_index_path %>?value=' + val
        $('.content-wrapper').IFrame('createTab', 'Search', link, 'search', true)
    }

    function close_tab() {
        $('.content-wrapper').IFrame('removeActiveTab')
    }
</script>