<body class="hold-transition login-page">
<div class="container">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
</div>
<div class="login-box">
  <div class="login-logo">
    <a href="#"><b>Admin</b>LTE</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <%= form_with(url: sessions_path, scope: :session, local: true) do |f| %>
        <div class="input-group mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: "email@example.com" %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "password" %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <%= f.label :remember_me, class: "icheck-primary" do %>
              <%= f.check_box :remember_me, id: "remember" %>
              <label for="remember">
                Remember Me
              </label>
            <% end %>
          </div>
          <div class="col-4">
            <%= f.submit "Sign In", class: "btn btn-primary btn-bloc" %>
          </div>
        </div>
        <!-- /.col -->


      <% end %>

      <div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
      </div>
      <!-- /.social-auth-links -->

      <p class="mb-1">
        <a href="forgot-password.html">I forgot my password</a>
      </p>
      <p class="mb-0">
        <%= link_to "Register a new membership", new_user_path, class: "text-center" %>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>


</body>

